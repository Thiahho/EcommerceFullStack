@{
    ViewData["Title"] = "Pago Exitoso";
}

<div class="container mx-auto px-4 py-8">
    <div class="max-w-md mx-auto bg-white rounded-lg shadow-lg p-6">
        <div class="text-center">
            <div class="mx-auto flex items-center justify-center h-12 w-12 rounded-full bg-green-100 mb-4">
                <svg class="h-6 w-6 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
            </div>
            
            <h1 class="text-2xl font-bold text-green-600 mb-2">Â¡Pago Exitoso!</h1>
            <p class="text-gray-600 mb-6">Tu compra ha sido procesada correctamente.</p>
            
            @if(ViewBag.PaymentInfo != null)
            {
                <div class="bg-gray-50 p-4 rounded-lg mb-6 text-left">
                    <h3 class="font-semibold text-gray-700 mb-2">Detalles del Pago</h3>
                    <p><strong>ID de Pago:</strong> @ViewBag.PaymentInfo.payment_id</p>
                    <p><strong>Estado:</strong> @ViewBag.PaymentInfo.status</p>
                    <p><strong>Referencia:</strong> @ViewBag.PaymentInfo.external_reference</p>
                </div>
            }
            
            <div class="space-y-2">
                <a href="/" class="block w-full bg-blue-600 text-white py-2 px-4 rounded-lg hover:bg-blue-700 transition-colors">
                    Volver al Inicio
                </a>
                <a href="/tienda" class="block w-full bg-gray-200 text-gray-700 py-2 px-4 rounded-lg hover:bg-gray-300 transition-colors">
                    Continuar Comprando
                </a>
            </div>
        </div>
    </div>
</div>
